<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TrangChuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_nen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/nenimg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgtesst"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_photo_camera_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/testText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="chưa cập nhật"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgtesst" />

        <TextView
            android:id="@+id/testEmail"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="chưa cập nhật "
            android:textColor="#000000"
            android:textSize="15dp"
           app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testText" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="50dp"
            android:layout_height="14dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="Logout "
            android:textColor="#000000"
            android:textAllCaps="false"
            android:background="#ffffff"
            android:textSize="8dp"
            android:layout_marginBottom="2dp"

            app:layout_constraintRight_toRightOf="@id/guideline6"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="70dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="ChangePassword "
            android:textColor="#000000"
            android:textAllCaps="false"
            android:background="#ffffff"
            android:textSize="8dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_ke"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#FFAB40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testEmail" />


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_ke"
            android:layout_marginTop="4dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_image"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ngoc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="hello"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@id/cv_image" />

            <TextView
                android:id="@+id/tv_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="hello"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_top" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/tv_top"
                app:srcCompat="@drawable/menu_dots" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/cv_image" />

            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="0dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_content" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.26" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96" />

            <ToggleButton
                android:id="@+id/iv_heart"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:text=""
                android:textOn=""
                android:checked="false"
                android:textOff=""
                android:background="@drawable/custom_heart"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@id/iv_comment"
                />
            <ImageButton
                android:id="@+id/iv_comment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/comment"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/iv_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_heart"
                app:layout_constraintLeft_toRightOf="@id/iv_heart" />

            <Button
                android:id="@+id/textViewBottom"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:background="@drawable/rectag_share"
                android:text="Share"
                android:textAllCaps="false"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/iv_comment"
                app:layout_constraintRight_toRightOf="@id/guideline2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>